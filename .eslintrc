{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    }
  },
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins" : [
    "babel",
    "react"
  ],
  "env"     : {
    "browser" : true,
    "node": true
  },
  "globals" : {
    "Action"       : false,
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "localStorage" : true
  },
  "rules": {
    "semi" : [2, "never"],
    "skipBlankLines": 0,
    "max-len": [2, 2000, 2],
    "react/jsx-no-bind": [2, {"allowBind": true, "allowArrowFunctions": true }],
    "react/jsx-boolean-value": [2, "always"],
    "react/jsx-no-undef": 1,
    "no-unexpected-multiline": 0,
    "no-return-assign": 0
  }
}
